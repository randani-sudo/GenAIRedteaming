# ML Service configuration
# Copy to .env and set values

# Data paths (relative to ml-service/ or absolute)
DATA_DIR=./data
REDBENCH_CSV=
NAVIROCKER_CSV=

# Model output
MODEL_DIR=./models
CHECKPOINT_DIR=./checkpoints

# Optional: Google Perspective API for toxicity (leave empty to use rule-based proxy)
PERSPECTIVE_API_KEY=

# Training defaults
DEFAULT_EPOCHS_BERT=10
DEFAULT_EPOCHS_ENSEMBLE=20
BATCH_SIZE=32
MAX_SEQ_LENGTH=256
BERT_MODEL=bert-base-uncased

# Next.js backend URL (for callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000
